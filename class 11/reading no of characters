fname=input("Enter file name : ")
num_lines=0
num_words=0
num_chars=0
with open(fname,'r') as f:
    for line in f:
        words=line.split()
        chars=line.strip()
        num_lines+=1
        num_words+=len(words)
        num_chars+=len(chars)
print("Number of Words : ")
print(num_words)
print("Number of lines : ")
print(num_lines)
